<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	
	<persistence-unit name="DB" transaction-type="RESOURCE_LOCAL">
	    
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<class>modele.Personne</class>
		<class>modele.Album</class>
		
		<properties>
		    <!-- property name="openjpa.RuntimeUnenhancedClasses" value="supported"/ --> 
		    <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
<!-- 			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://imss-db.upmf-grenoble.fr:5432/abdelfam?ssl=true&amp;sslfactory=org.postgresql.ssl.NonValidatingFactory" /> -->
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/albumz" />
			<property name="openjpa.jdbc.SynchronizeMappings"  value="buildSchema"/>
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="postgres" />

		</properties>
	</persistence-unit>
